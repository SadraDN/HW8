@model List<Person>

<h2>
    لیست محصولات
</h2>
<table class="table table-hover table-light">
    <thead>
        <th>ردیف</th>
        <th>شناسه</th>
        <th>نام</th>
        <th>اعمال تغییرات</th>
    </thead>

    @foreach (var per in Model)
    {
        <tr>
            <td></td>
            <td>@per.Id</td>
            <td>@per.Name</td>
            <td>
                <a class="btn btn-danger" asp-controller="Home" asp-action="Remove" asp-route-id="@per.Id">حذف</a>
                <a class="btn btn-danger" asp-controller="Home" asp-action="Edit" asp-route-id="@per.Id">ویرایش</a>
            </td>
        </tr>
    }
</table>